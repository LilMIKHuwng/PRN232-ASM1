@page "{id:short}"
@model FUNewsManagementWebRazorPage.Pages.SystemAccounts.DeleteModel
@{
    ViewData["Title"] = "Delete Account";
}

<h1>Delete Account</h1>

<div>
    <h4>Are you sure you want to delete this?</h4>
    <dl class="row">
        <dt class="col-sm-2">Name</dt>
        <dd class="col-sm-10">@Model.Account.AccountName</dd>

        <dt class="col-sm-2">Email</dt>
        <dd class="col-sm-10">@Model.Account.AccountEmail</dd>

        <dt class="col-sm-2">Role</dt>
        <dd class="col-sm-10">@Model.Account.AccountRole</dd>
    </dl>

    <form method="post">
        <button type="submit" class="btn btn-danger">Delete</button>
        <a asp-page="Index" class="btn btn-secondary">Cancel</a>
    </form>
</div>

@page 
@model FUNewsManagementWebRazorPage.Pages.Tags.DetailModel
@{
    ViewData["Title"] = "Tag Details";
}

<h1>Tag Details</h1>

<div>
    <dl class="row">
        <dt class="col-sm-2">ID</dt>
        <dd class="col-sm-10">@Model.Tag.TagId</dd>

        <dt class="col-sm-2">Name</dt>
        <dd class="col-sm-10">@Model.Tag.TagName</dd>

        <dt class="col-sm-2">Note</dt>
        <dd class="col-sm-10">@Model.Tag.Note</dd>
    </dl>
</div>

<a asp-page="Edit" asp-route-id="@Model.Tag.TagId" class="btn btn-primary">Edit</a>
<a asp-page="Index" class="btn btn-secondary">Back to List</a>

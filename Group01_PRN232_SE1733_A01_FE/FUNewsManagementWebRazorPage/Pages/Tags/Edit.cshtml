@page 
@model FUNewsManagementWebRazorPage.Pages.Tags.EditModel
@{
    ViewData["Title"] = "Edit Tag";
}

<h1>Edit Tag</h1>

<form method="post">
    <input type="hidden" asp-for="Tag.TagId" />
    <div class="form-group">
        <label asp-for="Tag.TagName"></label>
        <input asp-for="Tag.TagName" class="form-control" />
    </div>
    <div class="form-group">
        <label asp-for="Tag.Note"></label>
        <input asp-for="Tag.Note" class="form-control" />
    </div>
    <button type="submit" class="btn btn-primary">Save</button>
    <a asp-page="Index" class="btn btn-secondary">Cancel</a>
</form>

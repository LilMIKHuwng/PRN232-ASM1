@page 
@model FUNewsManagementWebRazorPage.Pages.Tags.DeleteModel
@{
    ViewData["Title"] = "Delete Tag";
}

<h1>Delete Tag</h1>

<div>
    <h4>Are you sure you want to delete this?</h4>
    <dl class="row">
        <dt class="col-sm-2">ID</dt>
        <dd class="col-sm-10">@Model.Tag.TagId</dd>

        <dt class="col-sm-2">Name</dt>
        <dd class="col-sm-10">@Model.Tag.TagName</dd>

        <dt class="col-sm-2">Note</dt>
        <dd class="col-sm-10">@Model.Tag.Note</dd>
    </dl>

    <form method="post">
        <input type="hidden" name="id" value="@Model.Tag.TagId" />
        <button type="submit" class="btn btn-danger">Delete</button>
        <a asp-page="Index" class="btn btn-secondary">Cancel</a>
    </form>
</div>

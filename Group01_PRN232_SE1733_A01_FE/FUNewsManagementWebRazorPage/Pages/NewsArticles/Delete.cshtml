@page
@model FUNewsManagementWebRazorPage.Pages.NewsArticles.DeleteModel
@{
    ViewData["Title"] = "Delete News Article";
}

<h1>Delete News Article</h1>

<h4>Are you sure you want to delete this article?</h4>
<hr />

<div class="form-group">
    <label>Title:</label>
    <p class="form-control-static">@Model.Article.NewsTitle</p>
</div>
<div class="form-group">
    <label>Headline:</label>
    <p class="form-control-static">@Model.Article.Headline</p>
</div>
<div class="form-group">
    <label>Source:</label>
    <p class="form-control-static">@Model.Article.NewsSource</p>
</div>
<div class="form-group">
    <label>Status:</label>
    <p class="form-control-static">@(Model.Article.NewsStatus == true ? "Published" : "Draft")</p>
</div>
<div class="form-group">
    <label>Tags:</label>
    @if (Model.Article.Tags != null && Model.Article.Tags.Any())
    {
        <ul class="list-unstyled">
            @foreach (var tag in Model.Article.Tags)
            {
                <li>@tag.TagName</li>
            }
        </ul>
    }
    else
    {
        <p class="form-control-static"><em>No tags</em></p>
    }
</div>

<form method="post">
    <input type="hidden" asp-for="Article.NewsArticleId" />
    <button type="submit" class="btn btn-danger">Delete</button>
    <a asp-page="Index" class="btn btn-secondary">Cancel</a>
</form>

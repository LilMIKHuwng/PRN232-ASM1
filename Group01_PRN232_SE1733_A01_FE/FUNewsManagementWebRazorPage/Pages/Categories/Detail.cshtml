@page "{id:short}"
@model FUNewsManagementWebRazorPage.Pages.Categories.DetailModel
@{
    ViewData["Title"] = "Category Details";
}

<h1>Category Details</h1>

<div class="form-group">
    <label>Category ID:</label>
    <p class="form-control-static">@Model.Category.CategoryId</p>
</div>
<div class="form-group">
    <label>Category Name:</label>
    <p class="form-control-static">@Model.Category.CategoryName</p>
</div>
<div class="form-group">
    <label>Description:</label>
    <p class="form-control-static">@Model.Category.CategoryDesciption</p>
</div>
<div class="form-group">
    <label>Parent Category:</label>
    <p class="form-control-static">@Model.ParentCategoryName ?? "No Parent"</p>
</div>
<div class="form-group">
    <label>Active:</label>
    <p class="form-control-static">@Model.Category.IsActive</p>
</div>

<a asp-page="Edit" asp-route-id="@Model.Category.CategoryId" class="btn btn-primary">Edit</a>
<a asp-page="Index" class="btn btn-secondary">Back</a>
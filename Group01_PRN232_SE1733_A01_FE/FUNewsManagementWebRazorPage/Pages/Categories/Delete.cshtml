@page "{id:short}"
@model FUNewsManagementWebRazorPage.Pages.Categories.DeleteModel
@{
    ViewData["Title"] = "Delete Category";
}

<h1>Delete Category</h1>

<h4>Are you sure you want to delete this category?</h4>
<hr />

<div class="form-group">
    <label>Category ID:</label>
    <p class="form-control-static">@Model.Category.CategoryId</p>
</div>
<div class="form-group">
    <label>Category Name:</label>
    <p class="form-control-static">@Model.Category.CategoryName</p>
</div>
<div class="form-group">
    <label>Description:</label>
    <p class="form-control-static">@Model.Category.CategoryDesciption</p>
</div>
<div class="form-group">
    <label>Parent Category:</label>
    <p class="form-control-static">@Model.ParentCategoryName ?? "No Parent"</p>
</div>
<div class="form-group">
    <label>Active:</label>
    <p class="form-control-static">@Model.Category.IsActive</p>
</div>

<form method="post">
    <input type="hidden" asp-for="Category.CategoryId" />
    <button type="submit" class="btn btn-danger">Delete</button>
    <a asp-page="Index" class="btn btn-secondary">Cancel</a>
</form>
